<Window xmlns:Controls="clr-namespace:Upsilon.Apps.Passkey.GUI.Views.Controls"  x:Class="Upsilon.Apps.Passkey.GUI.Views.UserServicesView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Upsilon.Apps.Passkey.GUI.Views"
        mc:Ignorable="d"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen">
    <StackPanel>
        <Menu>
            <Menu.ItemsPanel>
                <ItemsPanelTemplate>
                    <DockPanel HorizontalAlignment="Stretch"/>
                </ItemsPanelTemplate>
            </Menu.ItemsPanel>
            <MenuItem Margin="5"
                        Header="_Save"/>
            <MenuItem Margin="5"
                        Header="_User settings"/>
            <MenuItem Margin="5"
                        Header="_Generate random Password"/>
            <MenuItem Margin="5"
                        Header="_Show warnings"/>
            <MenuItem Margin="5"
                        Header="_Show logs"/>
            <MenuItem Margin="5"
                        Header="_Logout"
                        HorizontalAlignment="Right"/>
        </Menu>
        <GroupBox Header="Filters">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Label Margin="5"
                       Grid.Column="0"
                       VerticalContentAlignment="Center"
                       Content="Service :"/>
                <TextBox Margin="5"
                         Grid.Column="1"/>
                <Label Margin="5"
                       Grid.Column="2"
                       VerticalContentAlignment="Center"
                       Content="Indentifiant :"/>
                <TextBox Margin="5"
                         Grid.Column="3"/>
                <Label Margin="5"
                       Grid.Column="4"
                       VerticalContentAlignment="Center"
                       Content="Text :"/>
                <TextBox Margin="5"
                         Grid.Column="5"/>
                <Button Margin="5"
                        Grid.Column="6"
                        Content="✕"/>
            </Grid>
        </GroupBox>
        <StackPanel Orientation="Horizontal">
            <ListBox Name="_services_LB">
                
            </ListBox>
        </StackPanel>
    </StackPanel>
</Window>
