<Window x:Class="Upsilon.Apps.Passkey.GUI.Views.UserLogsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Upsilon.Apps.Passkey.GUI.Views"
        xmlns:viewmodels="clr-namespace:Upsilon.Apps.Passkey.GUI.ViewModels"
        d:DataContext="{d:DesignInstance Type=viewmodels:UserLogsViewModel}"
        mc:Ignorable="d"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        Title="{Binding Title}"
        MinHeight="700"
        MinWidth="1300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <GroupBox Header="Filters">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Label Grid.Column="0"
                           Content="From :"/>
                    <DatePicker Grid.Column="1"
                                SelectedDate="{Binding FromDateFilter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    <Label Grid.Column="2"
                           Content="To :"/>
                    <DatePicker Grid.Column="3"
                                SelectedDate="{Binding ToDateFilter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    <Label Grid.Column="4"
                           Content="Event type :"/>
                    <ComboBox Name="_eventType_CB"
                              SelectedItem="{Binding ReadableEventType, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                              Grid.Column="5"/>
                    <Label Grid.Column="6"
                           Content="Message :"/>
                    <TextBox Grid.Column="7"
                             Text="{Binding Message, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    <CheckBox Grid.Column="8"
                              Content="Needs review only"
                              IsChecked="{Binding NeedsReview}"/>
                    <Button Grid.Column="9"
                            Content="✕"
                            Click="_filterClear_Button_Click"/>
                </Grid>
            </GroupBox>
        </StackPanel>
        <ListBox Grid.Row="1"
                 Name="_logList_LB"
                 ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="110"/>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label Grid.Column="0"
                               Content="{Binding DateTime}"
                               Background="Transparent"/>
                        <CheckBox Grid.Column="1"
                                  IsChecked="{Binding NeedsReview}"
                                  Content="{Binding NeedsReviewString}"/>
                        <Label Grid.Column="2"
                               Content="{Binding EventType}"
                               Background="Transparent"/>
                        <TextBox Grid.Column = "3"
                                 Text="{Binding Message, Mode=OneWay}"
                                 IsReadOnly="True"
                                 TextWrapping="Wrap"
                                 Background="Transparent"/>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
