<UserControl x:Class="Upsilon.Apps.Passkey.GUI.Views.Controls.VisiblePasswordBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Upsilon.Apps.Passkey.GUI.Views.Controls"
             xmlns:controls="clr-namespace:Upsilon.Apps.Passkey.GUI.ViewModels.Controls"
             d:DataContext="{d:DesignInstance Type=controls:VisiblePasswordBoxViewModel}"
             mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <PasswordBox Margin="1"
                     Grid.Column="0"
                     Name="_passwordBox"
                     PasswordChar="¤"
                     FontFamily="Courier New"
                     IsEnabled="{Binding IsEnabled}"
                     Visibility="{Binding PasswordVisibility}"/>
        <TextBox Margin="1"
                 Grid.Column="0"
                 Visibility="{Binding TextVisibility}"
                 FontFamily="Courier New"
                 IsReadOnly="True"
                 Text="{Binding Password}"/>
        <Button Margin="1"
                Grid.Column="1"
                FontFamily="Courier New"
                Visibility="{Binding ButtonVisibility}"
                Content="👁"
                PreviewMouseDown="_viewButton_MouseDown"
                PreviewMouseUp="_viewButton_MouseUp"/>
    </Grid>
</UserControl>
