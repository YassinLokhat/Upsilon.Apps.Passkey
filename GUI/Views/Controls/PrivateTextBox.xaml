<UserControl x:Class="Upsilon.Apps.Passkey.GUI.Views.Controls.PrivateTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Upsilon.Apps.Passkey.GUI.Views.Controls"
             xmlns:controls="clr-namespace:Upsilon.Apps.Passkey.GUI.ViewModels.Controls"
             d:DataContext="{d:DesignInstance Type=controls:PrivateTextBoxViewModel}"
             mc:Ignorable="d">
    <Grid Width="294">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <PasswordBox Margin="5"
                     Grid.Column="0"
                     VerticalAlignment="Center"
                     Visibility="Visible"/>
        <TextBox Margin="5"
                 Grid.Column="0"
                 VerticalAlignment="Center"
                 IsReadOnly="True"
                 Visibility="Hidden"
                 Text="{Binding DisplayText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
        <Button Margin="5"
                Grid.Column="1"
                FontFamily="Courier New"
                Content="👁👓"/>
    </Grid>
</UserControl>
