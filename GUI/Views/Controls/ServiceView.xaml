<UserControl x:Class="Upsilon.Apps.Passkey.GUI.Views.Controls.ServiceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Upsilon.Apps.Passkey.GUI.Views.Controls"
             xmlns:controls="clr-namespace:Upsilon.Apps.Passkey.GUI.ViewModels.Controls"
             d:DataContext="{d:DesignInstance Type=controls:ServiceViewModel}"
             mc:Ignorable="d" d:DesignHeight="49.315" d:DesignWidth="80.658">
    <GroupBox Header="{Binding ServiceId}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Row="0"
                   Grid.Column="0"
                   Content="Service name : "/>
            <TextBox Grid.Row="0"
                     Grid.Column="1"
                     Text="{Binding ServiceName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     Background="{Binding ServiceNameBackground}"/>
            <Label Grid.Row="1"
                   Grid.Column="0"
                   Content="Url : "/>
            <TextBox Grid.Row="1"
                     Grid.Column="1"
                     Text="{Binding Url, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     Background="{Binding UrlBackground}"/>
            <Label Grid.Row="2"
                   Grid.Column="0"
                   Content="Notes : "/>
            <TextBox Grid.Row="2"
                     Grid.Column="1"
                     Text="{Binding Notes, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     Background="{Binding NotesBackground}"
                     AcceptsReturn="True"
                     AcceptsTab="True"/>
        </Grid>
    </GroupBox>
</UserControl>
