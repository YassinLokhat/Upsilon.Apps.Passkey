<Window xmlns:Controls="clr-namespace:Upsilon.Apps.Passkey.GUI.Views.Controls"
        x:Class="Upsilon.Apps.Passkey.GUI.Views.UserView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Upsilon.Apps.Passkey.GUI.Views"
        xmlns:viewmodels="clr-namespace:Upsilon.Apps.Passkey.GUI.ViewModels"
        d:DataContext="{d:DesignInstance Type=viewmodels:UserViewModel}"
        mc:Ignorable="d"
        Title="{Binding AppTitle}"
        ResizeMode="CanMinimize"
        WindowStartupLocation="CenterScreen"
        Height="500" Width="900">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Menu Grid.Row="0">
            <MenuItem Margin="5"
                      Header="_Save"/>
        </Menu>
        <StackPanel Grid.Row="1"
                    Orientation="Horizontal">
            <GroupBox Header="Credentials">
                <StackPanel Name="_credentials">
                    <StackPanel Orientation="Horizontal">
                        <Label Margin="5"
                               VerticalAlignment="Center">Username :</Label>
                        <TextBox Margin="5"
                                 Width="400"
                                 VerticalAlignment="Center"
                                 Text="{Binding Username, Mode=OneWayToSource, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>
            <GroupBox Header="Settings">
                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Label VerticalContentAlignment="Center">Log out after</Label>
                        <TextBox Margin="5"
                                 Width="25"
                                 VerticalContentAlignment="Center"
                                 HorizontalContentAlignment="Center"
                                 Text="{Binding LogoutTimeout, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                        <Label VerticalContentAlignment="Center">minutes. *</Label>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Label VerticalContentAlignment="Center">Clean any passwords in clipboard every</Label>
                        <TextBox Margin="5"
                                 Width="35"
                                 VerticalContentAlignment="Center"
                                 HorizontalContentAlignment="Center"
                                 Text="{Binding CleaningClipboardTimeout, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                        <Label VerticalContentAlignment="Center">seconds. *</Label>
                    </StackPanel>
                    <Label VerticalContentAlignment="Center">* Put '0' value to disable the option.</Label>
                    <GroupBox Header="Warnings">
                        <StackPanel>
                            <CheckBox Margin="5" IsChecked="{Binding NotifyLogReview}">Notify Log Review</CheckBox>
                            <CheckBox Margin="5" IsChecked="{Binding NotifyDuplicatedPasswords}">Notify Duplicated Passwords</CheckBox>
                            <CheckBox Margin="5" IsChecked="{Binding NotifyPasswordUpdateReminder}">Notify Password Update Reminder</CheckBox>
                            <CheckBox Margin="5" IsChecked="{Binding NotifyPasswordLeaked}">Notify Password Leaked</CheckBox>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </GroupBox>
        </StackPanel>
    </Grid>
</Window>
