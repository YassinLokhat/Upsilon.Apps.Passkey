<Window xmlns:Controls="clr-namespace:Upsilon.Apps.Passkey.GUI.Views.Controls"
        x:Class="Upsilon.Apps.Passkey.GUI.Views.UserView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Upsilon.Apps.Passkey.GUI.Views"
        xmlns:viewmodels="clr-namespace:Upsilon.Apps.Passkey.GUI.ViewModels"
        d:DataContext="{d:DesignInstance Type=viewmodels:UserViewModel}"
        mc:Ignorable="d"
        Title="{Binding AppTitle}"
        ResizeMode="CanMinimize"
        WindowStartupLocation="CenterScreen"
        Height="500" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Menu Grid.Row="0">
            <MenuItem Margin="5"
                      Header="_Save"/>
        </Menu>
        <StackPanel Grid.Row="1"
                    Orientation="Horizontal">
            <GroupBox Header="Credentials">
                <StackPanel Name="Credentials">
                    <StackPanel Orientation="Horizontal">
                        <Label Margin="5"
                               VerticalAlignment="Center">Username :</Label>
                        <TextBox Margin="5"
                                 Width="400"
                                 VerticalAlignment="Center"
                                 Text="{Binding Username, Mode=OneWayToSource, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>
            <GroupBox Header="Settings"></GroupBox>
        </StackPanel>
    </Grid>
</Window>
